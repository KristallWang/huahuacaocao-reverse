            <View android:id="@id/flower_home_menu_tv_comunity_line" android:visibility="gone" style="@style/FlowerMenuLineStyle" />
            <TextView android:id="@id/flower_home_menu_tv_notify_record" android:visibility="gone" android:text="@string/flower_menu_notify_record" android:drawableStart="@mipmap/icon_flower_menu_notify_setting" style="@style/FlowerMenuTextStyle" />
            <View android:visibility="gone" style="@style/FlowerMenuLineStyle" />
            <TextView android:id="@id/flower_home_menu_tv_no_disturbing_setting" android:visibility="gone" android:text="@string/flower_menu_no_disturbing_setting" android:drawableStart="@mipmap/icon_flower_menu_no_disturbing_setting" style="@style/FlowerMenuTextStyle" />
            <View android:id="@id/flower_home_menu_tv_no_disturbing_line" android:visibility="gone" style="@style/FlowerMenuLineStyle" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>