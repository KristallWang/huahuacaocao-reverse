    </FrameLayout>
    <ScrollView android:background="@color/translate_black_color" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/flower_home_menu_tv_plant_setting" android:text="@string/flower_menu_plant_setting" android:drawableStart="@mipmap/icon_flower_menu_palnt_setting" style="@style/FlowerMenuTextStyle" />
            <View style="@style/FlowerMenuLineStyle" />
            <TextView android:id="@id/flower_home_menu_tv_params_setting" android:text="@string/flower_menu_params_setting" android:drawableStart="@mipmap/icon_flower_menu_params_setting" style="@style/FlowerMenuTextStyle" />
            <View style="@style/FlowerMenuLineStyle" />
            <TextView android:id="@id/flower_home_menu_tv_switch_plant" android:text="@string/activity_switchplant_page_title" android:drawableStart="@mipmap/icon_flower_menu_switch_palnt" style="@style/FlowerMenuTextStyle" />
            <View style="@style/FlowerMenuLineStyle" />
            <TextView android:id="@id/flower_home_menu_tv_device_setting" android:text="@string/flower_menu_device_setting" android:drawableStart="@mipmap/icon_flower_menu_device_setting" style="@style/FlowerMenuTextStyle" />
            <View style="@style/FlowerMenuLineStyle" />
            <TextView android:id="@id/flower_home_menu_tv_growth_record" android:text="@string/titlebar_text_record" android:drawableStart="@mipmap/icon_flower_menu_history_data" style="@style/FlowerMenuTextStyle" />
            <View style="@style/FlowerMenuLineStyle" />
            <TextView android:id="@id/flower_home_menu_tv_plant_diary" android:text="@string/flower_menu_plant_diary" android:drawableStart="@mipmap/icon_flower_menu_growth_record" style="@style/FlowerMenuTextStyle" />
            <View style="@style/FlowerMenuLineStyle" />
