<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@mipmap/flower_care_bj" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/title_bar_layout" android:background="@color/translate_black_color" android:layout_width="fill_parent" android:layout_height="@dimen/layout_titlebar_height">
